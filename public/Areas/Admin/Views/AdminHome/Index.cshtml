@model IEnumerable<TeleYumaServiceMVC.Areas.Admin.Models.customer_info>
@{
    ViewBag.Title = "Index";
}

<h2>Gerentes</h2>
<div class="btn btn-success btn-sm"> @Html.ActionLink("Agregar", "Create", null, new { Style = "color:white" }) </div>
<div class="table table-responsive no-border">
    <table class="table table-responsive">
        <tr style="background-color:royalblue;color:white">
            <td>Nombre</td>
            <td>Balance</td>
            <td>Fondos</td>
            <td></td>
            <td></td>
           
        </tr>
        @foreach (var item in Model)
        {
            if (item.IsDISTRIB)
            {
                <tr>
                    <td>@item.fullname</td>
                    <td>@item.balance</td>
                    <td>@item.fondosDisponibles</td>
                    <td> <div class="btn btn-danger btn-xs"> @Html.ActionLink("Facturación", "Facturacion", new { id = item.i_customer }, new { Style = "color:white" }) </div></td>
                    <td>Asociados</td>
                </tr>
            }
        }
    </table>
</div>
